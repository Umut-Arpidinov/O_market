<resources>

    <!-- Base application theme. -->
    <style name="Theme.OMarket.Core" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OMarket.Core.Cells">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="TextView.Cells.Title" parent="TextView">
        <item name="android:textColor">@color/black_5</item>
    </style>

    <style name="TextView.Cells.SubTitle" parent="TextView">
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Container.Main">
        <item name="android:background">@color/gray_3</item>
    </style>

    <style name="Container.Cells">
        <item name="android:background">@color/gray_4</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.
        <item name="android:background">@color/black_1</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="appBar" >
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/black_4</item>
    </style>
    <style name="hint" >
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/black_4</item>
    </style>
    <style name="numberInput">
        <item name="android:textSize">@dimen/text_17sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/black_1</item>

    </style>
</resources>