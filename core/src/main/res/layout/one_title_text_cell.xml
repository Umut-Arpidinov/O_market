<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Container.Cells">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:background="@drawable/cell_around_corners"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_cells_icon"
            android:layout_width="31.23dp"
            android:layout_height="31.23dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_cells_image" />

        <TextView
            android:id="@+id/tv_cell_title"
            style="@style/TextView.Cells.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:lineHeight="18.75dp"
            android:text="@string/title_in_cells"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_cells_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_cell_detail"
            style="@style/TextView.Cells.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:lineHeight="18.75dp"
            android:text="@string/cells_info"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/iv_shevron"
            tools:targetApi="p" />

        <ImageView
            android:id="@+id/iv_shevron"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:src="@drawable/arrow_shevron"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/view"
        style="@style/Divider.Horizontal"
        app:layout_constraintTop_toBottomOf="@id/cl_top"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:background="@drawable/cell_around_corners"
        app:layout_constraintTop_toBottomOf="@id/view">
        <ImageView
            android:id="@+id/iv_cells_icon2"
            android:layout_width="31.23dp"
            android:layout_height="31.23dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_cells_image" />

        <TextView
            android:id="@+id/tv_cell_title2"
            style="@style/TextView.Cells.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:lineHeight="18.75dp"
            android:text="@string/title_in_cells"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_cells_icon2"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_cell_detail2"
            style="@style/TextView.Cells.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:lineHeight="18.75dp"
            android:text="@string/cells_info"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/iv_shevron2"
            tools:targetApi="p" />

        <ImageView
            android:id="@+id/iv_shevron2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_18dp"
            android:src="@drawable/arrow_shevron"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>