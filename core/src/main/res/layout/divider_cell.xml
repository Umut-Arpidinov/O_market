<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/divider_cell_52dp"
    android:layout_marginHorizontal="@dimen/margin_horizontal_20dp"
    android:background="@drawable/cell_middle_background"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_cell_date"
        style="@style/TextView.Divider.Cells.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_in_cells"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cell_details"
        style="@style/TextView.Divider.Cells.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/margin_end_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>