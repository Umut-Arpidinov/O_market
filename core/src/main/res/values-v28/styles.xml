<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.Cells.Title" parent="TextView">
        <item name="android:textColor">@color/black_5</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:visibility">gone</item>
        <item name="android:lineHeight">@dimen/cells_title_line_height_18.17dp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:layout_marginStart">@dimen/margin_start_8dp</item>
        <item name="android:textSize">@dimen/cells_title_text_size_16sp</item>
    </style>

    <style name="TextView.Cells.SubTitle" parent="TextView.Cells.Title">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:lineHeight">@dimen/cells_title_line_height_16.41dp</item>
        <item name="android:textSize">@dimen/cells_title_text_size_16sp</item>
    </style>

    <style name="TextView.Cells.Details" parent="TextView.Cells.Title">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:layout_marginStart">@dimen/margin_start_0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_16dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_2</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>