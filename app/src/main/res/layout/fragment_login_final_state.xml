<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/gray_2"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.login.LoginInitialStateFragment">

    <kg.o.internlabs.core.custom_views.cells.CustomCompositeCellView
        android:id="@+id/cccv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:setDate="@string/_12_2022"
        app:setDetails="@string/cells_info"
        app:setIcon="@drawable/bg_cells_image" />

    <kg.o.internlabs.core.custom_views.cells.CustomSmallSubtitleTextCellsView
        android:id="@+id/csstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/cccv"
        android:layout_marginTop="@dimen/cells_corner_radius_5dp"
        app:position="TOP"
        app:setDetails="@string/cells_info"
        app:setIcon="@drawable/bg_cells_image"
        app:setShevron="@drawable/arrow_shevron"
        app:setSubtitle="@string/cells_subtitle"
        app:setTitle="@string/title_in_cells" />

    <kg.o.internlabs.core.custom_views.cells.CustomRoundedOneTitleTextCellsView
        android:id="@+id/cottcv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/csstcv_1"
        app:position ="MIDDLE"
        app:isShevronVisible="true"
        app:setIcon="@drawable/bg_cells_image"
        app:setTitle="@string/title_in_cells" />

    <kg.o.internlabs.core.custom_views.cells.CustomBigSubtitleTextCellsView
        android:id="@+id/cbstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:isEditable="true"
        app:layout_constraintTop_toBottomOf="@id/cottcv_2"
        app:position="BOTTOM"
        app:setDetails="@string/cells_info"
        app:setIcon="@drawable/bg_cells_image"
        app:setShevron="@drawable/arrow_shevron"
        app:setSubtitle="@string/cells_subtitle"
        app:setTitle="@string/title_in_cells" />


    <kg.o.internlabs.core.custom_views.cells.CustomDividerCellView
        android:id="@+id/cdcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_horizontal_8dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/cbstcv_1"
        app:setButton="@string/all"
        app:setTitle="@string/title_in_cells" />

    <kg.o.internlabs.core.custom_views.cells.CustomFAQCellView
        android:id="@+id/cfaqcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setQuestions="@string/questions"
        android:layout_marginTop="@dimen/margin_horizontal_8dp"
        app:setAnswers="@string/answer"
        app:layout_constraintTop_toBottomOf="@id/cdcv"/>

</androidx.constraintlayout.widget.ConstraintLayout>