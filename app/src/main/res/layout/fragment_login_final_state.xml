<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".presentation.ui.fragments.login.LoginFragmentInitialState">

    <kg.o.internlabs.core.custom_view.cells.CustomSmallSubtitleTextCellsView
        android:id="@+id/csstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:position="Top"
        app:setDetails="Details"
        app:setIcon="@drawable/bg_cells_image"
        app:setShevron="@drawable/arrow_shevron"
        app:setSubtitle="Subtitle"
        app:setTitle="Title" />

    <kg.o.internlabs.core.custom_view.cells.CustomOneTitleTextCellsView
        android:id="@+id/cottcv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/csstcv_1"
        app:position="Middle"
        app:setDetails="Sample"
        app:setIcon="@drawable/bg_cells_image"
        app:setShevron="@drawable/arrow_shevron"
        app:setTitle="Title" />

    <kg.o.internlabs.core.custom_view.cells.CustomBigSubtitleTextCellsView
        android:id="@+id/cbstcv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:setIcon="@drawable/bg_cells_image"
        app:setShevron="@drawable/arrow_shevron"
        app:setDetails="Detail"
        app:setSubtitle="Subtitle"
        app:setTitle="Title"
        app:position="Bottom"
        app:isEditable="true"
        app:layout_constraintTop_toBottomOf="@id/cottcv_2"/>
