<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_end_8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/fl_add_image"
        android:layout_width="@dimen/icon_width_100dp"
        android:layout_height="@dimen/icon_height_100dp"
        android:visibility="gone"
        android:background="@drawable/bg_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_add_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/add_icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_load_image"
        android:layout_width="@dimen/icon_width_100dp"
        android:layout_height="@dimen/icon_height_100dp"
        android:background="@drawable/bg_image_load"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_load_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/black_1"
            android:layout_margin="@dimen/margin_1dp"
            app:cardElevation="@dimen/card_elevation_0dp"
            app:cardCornerRadius="@dimen/corner_radius_8dp">

            <ImageView
                android:id="@+id/iv_load_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/icon"
                tools:src="@drawable/ic_profile" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_end_4dp"
                android:layout_marginTop="@dimen/margin_top_4dp"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_delete" />

            <TextView
                android:id="@+id/tv_main_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textAppearance="@style/TextView.Main_Image"
                android:text="@string/main_image"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/ProgressBar.ImageLoad"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>